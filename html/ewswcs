#! /bin/bash

#MAPSERV=/var/fswms.nemac.org/cgi-bin/mapserv-5.6.5.exe
#MAPFILE=/var/fswms.nemac.org/msconfig/ewswcs.map

if grep -q CentOS /etc/redhat-release ; then
  MAPSERV=../cgi-bin/mapserv-6.0.1-CentOS.exe
else
  MAPSERV=../cgi-bin/mapserv-6.0.1.exe
fi

MAPFILE=../msconfig/ewswcs.map

if [ "${REQUEST_METHOD}" = "GET" ]; then
  if [ -z "${QUERY_STRING}" ]; then
    QUERY_STRING="map=${MAPFILE}"
  else
    QUERY_STRING="map=${MAPFILE}&${QUERY_STRING}"
  fi
  exec ${MAPSERV}
else
  echo "Sorry, I only understand GET requests."
fi

exit 1
