                     layerTitle = "True Color " + layerName[-11:]
                 else:
                     layerTitle = layerName[-8:]
                 if layerName[-2:].rstrip()!="bd": #this is one of those bd ones
                     if maskBool:
                         tifList.append({ 'LAYER_LID'    : lid,
                                          'WRAP_NAME'    : wrapName,
